<%- include('../partials/header') %>

<section id="categories">
  <% categories.forEach(function(c) { %>
  <a class="category-bar" href="/items?category=<%= c %>"><%= c %></a><div class="categoryDivider"></div>
  <% }); %>
</section>




<section id="items">
  <% items.forEach(function(item, idx) { %> 
    <% console.log(item._id) %>
    <div>
     <a class="button" href="#popup<%= idx %>"> <%= item.name %> </a>
     <div id="popup<%= idx %>" class="overlay">
       <div class="box">
         <a class="close" href="#">&times;</a>
         <h2 class="itemName"> <%= item.name %> </h2>
         <div class="price"><span>$<%= item.price %></span></div>
         <img src="<%= item.imageFileName %>">
         <div class="content">
           <br>
          </div>
          <form action="/orders/item/<%= item._id %>" method="POST">
            <button class="order-btn" type="submit">Add to Order</button>
        </form>
      </div>
    </div>
  </div>
  <% }); %>
</section>


<%- include('../partials/footer') %>


